{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "classic",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "./types",
      "@types/node-telegram-bot-api",
      "@cloudflare/workers-types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
